<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="9dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <EditText
                        android:id="@+id/code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Code"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:textColor="@android:color/black" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5">

                    <EditText
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:clickable="false"
                        android:focusable="false"
                        android:hint="Date"
                        android:inputType="date"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:textColor="@android:color/black" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="9dp"
            android:orientation="vertical"

            android:paddingEnd="5dp"
            android:paddingBottom="5dp">

            <TableLayout
                android:id="@+id/ffnTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow android:background="#e0f2f1">

                    <TextView
                        style="@style/row1TextView"
                        android:paddingLeft="5dp"
                        android:text="FFN1" />

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row1TextView"
                        android:text="FFN2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row1TextView"
                        android:text="FFN3" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row1TextView"
                        android:text="FFN4" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row1TextView"
                        android:paddingRight="5dp"
                        android:text="FFN5" />

                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/ffn1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout

                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ffn2"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ffn3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ffn4"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout

                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ffn5"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/xtraTablle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:stretchColumns="*">

                <TableRow android:background="#f9fbe7">

                    <TextView
                        style="@style/row2TextView"
                        android:paddingLeft="25dp"
                        android:text="XTRA1" />

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row2TextView"
                        android:paddingRight="25dp"
                        android:text="XTRA2" />
                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/xtra1"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/xtra2"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/lfnTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:stretchColumns="*">

                <TableRow android:background="#fbe9e7">

                    <TextView
                        style="@style/row3TextView"
                        android:paddingLeft="5dp"
                        android:text="LFN1" />

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row3TextView"
                        android:text="LFN2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row3TextView"
                        android:text="LFN3" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row3TextView"
                        android:text="LFN4" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <TextView
                        style="@style/row3TextView"
                        android:paddingRight="5dp"
                        android:text="LFN5" />

                </TableRow>

                <TableRow>

                    <EditText
                        android:id="@+id/lfn1"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout

                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/lfn2"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/lfn3"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/lfn4"
                        android:gravity="center"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="2" />

                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <View style="@style/Divider_invisible" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/lfn5"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="2" />

                </TableRow>

            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="9dp"
            android:gravity="bottom"
            android:paddingBottom="9dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="delete"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
